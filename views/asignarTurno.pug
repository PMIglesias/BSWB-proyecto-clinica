doctype html
html
  head
    title Asignar Turno
    link(rel="stylesheet" href="/css/styles.css")

  body
    button.theme-toggle(id="themeBtn") 🌙
    nav
      a.btn(href="/") ← Volver al Inicio
    h1 Asignar Turno
    form(action="/asignar-turno" method="POST")
      label(for="pacienteId") Selecciona un paciente:
      select(name="pacienteId" required)
        each paciente in pacientes
          option(value=paciente.id)= paciente.nombre

      label(for="fecha") Fecha y hora del turno:
      input(type="datetime-local" name="fecha" required)

      button(type="submit") Asignar Turno
    script.
      const themeBtn = document.getElementById("themeBtn");
      const body = document.body;

      if (localStorage.getItem("theme") === "dark") {
        body.classList.add("dark-mode");
        themeBtn.textContent = "☀️";
      }

      themeBtn.addEventListener("click", () => {
        body.classList.toggle("dark-mode");
        const isDark = body.classList.contains("dark-mode");
        localStorage.setItem("theme", isDark ? "dark" : "light");
        themeBtn.textContent = isDark ? "☀️" : "🌙";
      });
